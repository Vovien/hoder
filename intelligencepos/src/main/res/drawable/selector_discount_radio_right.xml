<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape>
            <corners android:topRightRadius="@dimen/radius" android:bottomRightRadius="@dimen/radius"/>
            <solid android:color="#2495ee"/>
        </shape>
    </item>
    
    <item android:state_checked="false" >
        <shape>
            <corners android:topRightRadius="@dimen/radius" android:bottomRightRadius="@dimen/radius"/>
            <solid android:color="#ffffff"/>
            <stroke  android:color="#2495ee"  android:width="@dimen/button_stroke_size"/>
        </shape>
    </item>
</selector>