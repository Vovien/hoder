<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true" android:state_selected="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/radius"/>
            <solid android:color="@color/layout_bg_blue"/>
        </shape>
    </item>

    <item android:state_enabled="true" android:state_selected="false">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/radius"/>
            <solid android:color="@color/layout_bg_white"/>
            <stroke android:width="1dp" android:color="@color/layout_stroke"/>
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/radius"/>
            <solid android:color="@color/layout_bg_disable"/>
        </shape>
    </item>
</selector>