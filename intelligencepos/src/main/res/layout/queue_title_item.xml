<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:background="@color/layout_bg_white_ffffff"
    android:layout_height="@dimen/layout_universal_spacing_39">

    <RelativeLayout
        android:id="@+id/ll_type"
        android:layout_width="@dimen/layout_universal_spacing_72"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_type_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:maxWidth="@dimen/layout_universal_spacing_72"
            android:singleLine="true"
            android:textColor="@color/tv_text_gray_555555"
            android:textSize="@dimen/tv_text_size_16"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/layout_universal_spacing_5"
            tools:text="所有所有" />

        <TextView
            android:id="@+id/tv_type_waiting_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/shape_wating_number"
            android:gravity="center"
            android:minWidth="@dimen/layout_universal_spacing_18"
            android:padding="@dimen/layout_universal_spacing_1"
            android:textColor="#ffffff"
            android:textSize="@dimen/tv_text_size_11"
            tools:text="1" />

    </RelativeLayout>

    <View
        android:id="@+id/view_bottom_line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignLeft="@+id/ll_type"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/ll_type"
        android:background="@color/layout_bg_blue_2495ee" />

</RelativeLayout>