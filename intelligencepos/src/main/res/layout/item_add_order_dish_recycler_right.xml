<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">
    <TextView
        android:id="@+id/table_name"
        android:layout_width="match_parent"
        android:layout_height="37.3dp"
        android:background="@android:color/transparent"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/common_interval"
        android:textColor="@color/common_text_color_555555"
        android:textSize="16sp"
        android:visibility="gone"
        android:maxLines="1"
        android:ellipsize="end"
        tools:text="大厅"
        tools:visibility="visible"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="74.7dp"
        android:background="@color/layout_bg_white"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:id="@+id/dishes_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/common_interval"
                android:paddingRight="@dimen/common_interval"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/common_text_color_000000"
                android:textSize="18.7sp"
                tools:text="宫保鸡丁"/>

            <TextView
                android:id="@+id/dishes_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:paddingLeft="@dimen/common_interval"
                android:paddingRight="@dimen/common_interval"
                android:textColor="@color/common_text_color_555555"
                android:textSize="14.7sp"
                tools:text="￥12.00/份"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical|right"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/dishes_reduce_count"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="16dp"
                android:paddingRight="10dp"
                android:src="@drawable/minus_dishes"
                android:visibility="gone"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/dishes_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/common_text_color_000000"
                android:textSize="16sp"
                tools:text="13" />

            <ImageView
                android:id="@+id/dishes_add_count"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:paddingRight="16dp"
                android:src="@drawable/add_dishes" />
        </LinearLayout>
    </LinearLayout>
    <include layout="@layout/divider_horizontal"/>
</LinearLayout>
