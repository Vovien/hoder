<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="74.7dp"
    android:background="@color/layout_bg_common_thirdly"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/common_interval">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_sales_order_payment_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/tv_text_black"
                android:textSize="18.7sp"
                tools:text="微信"/>


            <TextView
                android:id="@+id/tv_sales_order_payment_actually_amount"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/tv_text_black"
                android:textSize="18.7sp"
                tools:text="￥50.00"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_discount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:visibility="gone"
            tools:visibility="visible">

            <TextView
                android:id="@+id/tv_sales_order_payment_discount"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="top"
                android:textColor="@color/tv_text_black"
                android:textSize="13.3sp"
                tools:text="微信"/>

            <TextView
                android:id="@+id/tv_sales_order_payment_discount_amount"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="top"
                android:textColor="#707070"
                android:textSize="13.3sp"
                tools:text="￥50.00"/>

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_retreat_sales_order_payment"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/common_interval"
        android:paddingRight="@dimen/common_interval"
        android:scaleType="center"
        android:src="@drawable/refund" />

</LinearLayout>