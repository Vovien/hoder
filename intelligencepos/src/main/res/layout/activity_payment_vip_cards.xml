<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layout_bg_common_secodary"
    android:orientation="vertical">


    <com.holderzone.intelligencepos.widget.Title
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:menuResVisibility="gone"
        app:menuTextVisibility="gone"
        app:returnVisibility="visibility"
        app:title="会员支付密码" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_unpaid_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_universal_spacing_32"
            android:text="￥22.00"
            android:textColor="@color/tv_text_blue"
            android:textSize="47sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="支付折扣"
                android:textColor="#555"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_payment_discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="-￥100"
                android:textColor="#555"
                android:textSize="15sp" />
        </LinearLayout>

        <com.jungly.gridpasswordview.GridPasswordView
            android:id="@+id/gridPasswordView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_universal_spacing_48"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/layout_universal_spacing_16"
            android:layout_marginRight="@dimen/layout_universal_spacing_16"
            android:layout_marginTop="@dimen/layout_universal_spacing_39"
            android:clickable="false"
            android:focusable="true"
            app:gpvGridColor="#ffffff"
            app:gpvLineColor="@color/dialog_bg_color"
            app:gpvLineWidth="1dp"
            app:gpvPasswordLength="6"
            app:gpvPasswordTransformation="*"
            app:gpvPasswordType="numberPassword"
            app:gpvTextColor="#555"
            app:gpvTextSize="25sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="卡内余额"
                android:textColor="@color/common_text_color_707070"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="￥600"
                android:textColor="#555"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/money_insufficient"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="(不足)"
                android:textColor="#555"
                android:textSize="13sp" />
        </LinearLayout>

        <android.support.v4.widget.Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_forget_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:paddingBottom="@dimen/layout_universal_spacing_8"
            android:paddingLeft="@dimen/layout_universal_spacing_16"
            android:paddingRight="@dimen/layout_universal_spacing_16"
            android:paddingTop="@dimen/layout_universal_spacing_8"
            android:text="忘记密码？"
            android:textColor="@color/tv_text_blue"
            android:textSize="13sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_balance_sufficient"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:layout_weight="0.8"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bt_number_1"
                style="@style/btn_input_style_inner_payment"
                android:text="1"
                android:textSize="25sp" />

            <android.support.v4.widget.Space
                android:layout_width="3dp"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/bt_number_2"
                style="@style/btn_input_style_inner_payment"
                android:text="2"
                android:textSize="25sp" />

            <android.support.v4.widget.Space
                android:layout_width="3dp"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/bt_number_3"
                style="@style/btn_input_style_inner_payment"
                android:text="3"
                android:textSize="25sp" />

        </LinearLayout>

        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="3dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bt_number_4"
                style="@style/btn_input_style_inner_payment"
                android:text="4"
                android:textSize="25sp" />

            <android.support.v4.widget.Space
                android:layout_width="3dp"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/bt_number_5"
                style="@style/btn_input_style_inner_payment"
                android:text="5"
                android:textSize="25sp" />

            <android.support.v4.widget.Space
                android:layout_width="3dp"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/bt_number_6"
                style="@style/btn_input_style_inner_payment"
                android:text="6"
                android:textSize="25sp" />

        </LinearLayout>

        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="3dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bt_number_7"
                style="@style/btn_input_style_inner_payment"
                android:text="7"
                android:textSize="25sp" />

            <android.support.v4.widget.Space
                android:layout_width="3dp"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/bt_number_8"
                style="@style/btn_input_style_inner_payment"
                android:text="8"
                android:textSize="25sp" />

            <android.support.v4.widget.Space
                android:layout_width="3dp"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/bt_number_9"
                style="@style/btn_input_style_inner_payment"
                android:text="9"
                android:textSize="25sp" />

        </LinearLayout>

        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="3dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bt_number_clear"
                style="@style/btn_input_style_inner_payment"
                android:background="@null"
                android:textSize="25sp" />

            <android.support.v4.widget.Space
                android:layout_width="3dp"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/bt_number_0"
                style="@style/btn_input_style_inner_payment"
                android:text="0"
                android:textSize="25sp" />

            <android.support.v4.widget.Space
                android:layout_width="3dp"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/payment_keyboard_delete"
                style="@style/btn_input_style_inner_payment"
                android:background="@null"
                android:scaleType="centerInside"
                android:src="@drawable/keyborad_delete" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_balance_insufficient"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/balance_insufficient" />

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <Button
            android:id="@+id/other_pay_way"
            style="@style/RightAngleButton"
            android:text="使用其他支付方式" />

    </LinearLayout>


</LinearLayout>