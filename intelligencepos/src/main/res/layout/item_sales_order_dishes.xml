<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/layout_bg_white_ffffff"
    android:orientation="vertical">

    <View
        android:id="@+id/divider_space_line_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_universal_spacing_8"
        android:background="@color/layout_bg_common_secondary" />

    <RelativeLayout
        android:id="@+id/ll_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_universal_spacing_48">

        <View
            android:layout_width="3dp"
            android:layout_height="16dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:background="@color/btn_text_blue_2495ee" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="22dp"
            android:paddingRight="@dimen/layout_universal_spacing_16"
            android:textColor="@color/tv_text_black_000000"
            android:textSize="@dimen/tv_text_size_16"
            tools:text="大厅01" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/divider_solid_line" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_context"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/layout_universal_spacing_16"
        android:paddingRight="@dimen/layout_universal_spacing_16">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_universal_spacing_56"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_dish_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:textColor="@color/tv_text_black_000000"
                    android:textSize="@dimen/tv_text_size_18"
                    tools:text="青椒肉丝" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|right"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_dish_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="×16"
                        android:textColor="#000"
                        android:textSize="@dimen/tv_text_size_18" />

                    <TextView
                        android:id="@+id/tv_total_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="￥46.00"
                        android:textColor="#000"
                        android:textSize="@dimen/tv_text_size_14" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_addition_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_addition_fee_identify"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="4dp"
                    android:layout_weight="1"
                    android:lineSpacingExtra="3dp"
                    android:gravity="center_vertical"
                    android:text="做法附加"
                    android:textColor="@color/tv_text_gray_707070"
                    android:textSize="@dimen/tv_text_size_14" />

                <TextView
                    android:id="@+id/tv_addition_fee_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/tv_text_black_000000"
                    android:textSize="@dimen/tv_text_size_14"
                    tools:text="18.00" />

            </LinearLayout>

        </LinearLayout>

        <include
            android:id="@+id/divider_dash_line"
            layout="@layout/include_dash_line"
            android:layout_width="match_parent"
            android:layout_height="1px" />

    </LinearLayout>

    <include
        android:id="@+id/divider_solid_line"
        layout="@layout/divider_horizontal" />

    <View
        android:id="@+id/divider_space_line_footer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_universal_spacing_8"
        android:background="@color/layout_bg_common_secondary" />

</LinearLayout>