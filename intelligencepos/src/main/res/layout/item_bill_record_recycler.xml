<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bill_recode_recycler_item_layout"
    android:layout_width="match_parent"
    android:layout_height="96dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:background="@color/common_text_color_f7f7f7"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/bill_recode_recycler_item_image"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        tools:src="@drawable/tablefood"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:layout_toRightOf="@+id/bill_recode_recycler_item_image">
        <TextView
            android:id="@+id/bill_recode_recycler_table_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:textSize="18.7sp"
            android:textColor="@color/common_text_color_000000"
            tools:text="桌台名称"/>
        <TextView
            android:id="@+id/bill_recode_recycler_serial_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="@color/common_text_color_707070"
            android:textSize="13.3sp"
            android:layout_alignLeft="@+id/bill_recode_recycler_table_name"
            android:layout_below="@+id/bill_recode_recycler_table_name"
            tools:text="流水号：0215465"/>
        <TextView
            android:id="@+id/bill_recode_recycler_end_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="@color/common_text_color_707070"
            android:textSize="13.3sp"
            android:layout_alignLeft="@+id/bill_recode_recycler_table_name"
            android:layout_below="@+id/bill_recode_recycler_serial_number"
            tools:text="结账或者作废时间"/>
        <TextView
            android:id="@+id/bill_recode_recycler_money"
            android:layout_toRightOf="@+id/bill_recode_recycler_table_name"
            android:layout_alignBaseline="@+id/bill_recode_recycler_table_name"
            android:layout_alignBottom="@+id/bill_recode_recycler_table_name"
            android:layout_alignParentRight="true"
            android:gravity="right"
            android:textSize="18.7sp"
            android:textColor="@color/common_text_color_000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="￥45.00"/>
        <TextView
            android:id="@+id/bill_recode_recycler_bill_state"
            android:layout_toRightOf="@+id/bill_recode_recycler_end_time"
            android:layout_alignBaseline="@+id/bill_recode_recycler_end_time"
            android:layout_alignBottom="@+id/bill_recode_recycler_end_time"
            android:layout_alignParentRight="true"
            android:gravity="right"
            android:textColor="@color/common_text_color_707070"
            android:textSize="13.3sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="账单状态"/>
    </RelativeLayout>
</RelativeLayout>
