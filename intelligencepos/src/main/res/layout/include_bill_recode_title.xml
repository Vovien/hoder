<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/common_text_color_ffffff"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back_image"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/common_interval"
            android:paddingRight="@dimen/common_interval"
            android:src="@drawable/back_blue" />

        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:paddingRight="@dimen/activity_table_layout_margin_20dp"
            android:text="账单记录"
            android:textColor="@color/tv_text_blue"
            android:textSize="18.7sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/iv_search"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/layout_universal_spacing_16"
            android:paddingRight="@dimen/layout_universal_spacing_16"
            android:visibility="gone"
            tools:visibility="visible"
            android:src="@drawable/search_blue" />
        <TextView
            android:id="@+id/title_refresh"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/common_interval"
            android:paddingRight="@dimen/common_interval"
            android:text="刷新"
            android:textColor="@color/tv_text_blue"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/title_more_image"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/common_interval"
            android:paddingRight="@dimen/common_interval"
            android:src="@drawable/more_blue" />
    </LinearLayout>

    <include layout="@layout/divider_horizontal" />
</LinearLayout>
