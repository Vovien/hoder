<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shadow_background"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_popup_window_call_up"
        android:layout_width="147dp"
        android:layout_height="45dp"
        android:background="@color/layout_bg_white_ffffff"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:src="@drawable/popup_wake_up"/>

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:gravity="center_vertical"
            android:text="叫起"
            android:textColor="#000000"
            android:textSize="16sp"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#e7e8ec"/>

    <LinearLayout
        android:id="@+id/ll_popup_window_remind_dish"
        android:layout_width="147dp"
        android:layout_height="45dp"
        android:background="@color/layout_bg_white_ffffff"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:src="@drawable/popup_urge_dishes"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:gravity="center_vertical"
            android:text="催菜"
            android:textColor="#000000"
            android:textSize="16sp"/>

    </LinearLayout>

    <include layout="@layout/include_dash_line"/>
    <LinearLayout
        android:id="@+id/ll_popup_window_designated_dish"
        android:layout_width="147dp"
        android:layout_height="45dp"
        android:background="@color/layout_bg_white_ffffff"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:src="@drawable/designated_dishes"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:gravity="center_vertical"
            android:text="划菜"
            android:textColor="#000000"
            android:textSize="16sp"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/dashLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include
            layout="@layout/include_dash_line"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_popup_window_return_dish"
        android:layout_width="147dp"
        android:layout_height="45dp"
        android:background="@color/layout_bg_white_ffffff"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:src="@drawable/popup_back_dishes"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:gravity="center_vertical"
            android:text="退菜"
            android:textColor="#000000"
            android:textSize="16sp"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#e7e8ec"/>

    <LinearLayout
        android:id="@+id/ll_popup_window_change_table"
        android:layout_width="147dp"
        android:layout_height="45dp"
        android:background="@color/layout_bg_white_ffffff"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:src="@drawable/popup_change_table"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:gravity="center_vertical"
            android:text="换台"
            android:textColor="#000000"
            android:textSize="16sp"/>

    </LinearLayout>

    <include layout="@layout/include_dash_line"/>

    <LinearLayout
        android:id="@+id/ll_popup_window_merge_table"
        android:layout_width="147dp"
        android:layout_height="45dp"
        android:background="@color/layout_bg_white_ffffff"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:src="@drawable/popup_merge_order"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:gravity="center_vertical"
            android:text="并单"
            android:textColor="#000000"
            android:textSize="16sp"/>

    </LinearLayout>

</LinearLayout>
