<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.holderzone.intelligencepos.widget.Title
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:menuResVisibility="gone"
        app:menuTextVisibility="gone"
        app:returnVisibility="visibility"
        app:title="重置密码" />

   <LinearLayout
       android:focusable="true"
       android:focusableInTouchMode="true"
       android:gravity="center"
       android:layout_weight="1"
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:orientation="vertical">
       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_gravity="center"
           android:layout_marginTop="30dp"
           android:gravity="center"
           android:text="输入验证码"
           android:textColor="#555"
           android:textSize="16sp" />

       <com.jungly.gridpasswordview.GridPasswordView
           android:clickable="false"
           android:focusable="true"
           android:id="@+id/gridPasswordView"
           android:layout_width="match_parent"
           android:layout_height="@dimen/layout_universal_spacing_48"
           android:layout_gravity="center"
           android:layout_marginLeft="@dimen/layout_universal_spacing_16"
           android:layout_marginRight="@dimen/layout_universal_spacing_16"
           android:layout_marginTop="21dp"
           app:gpvGridColor="#ffffff"
           app:gpvLineColor="@color/dialog_bg_color"
           app:gpvLineWidth="1dp"
           app:gpvPasswordLength="6"
           app:gpvPasswordTransformation="*"
           app:gpvPasswordType="numberPassword"
           app:gpvTextColor="#555"
           app:gpvTextSize="25sp" />

       <TextView
           android:id="@+id/get_vercodeuid"
           android:layout_width="match_parent"
           android:layout_height="@dimen/layout_universal_spacing_32"
           android:layout_gravity="center"
           android:layout_marginTop="23dp"
           android:gravity="center"
           android:text="获取验证码"
           android:textColor="@color/tv_text_blue"
           android:textSize="16sp" />
   </LinearLayout>


    <LinearLayout
        android:layout_weight="0.8"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bt_number_1"
                style="@style/btn_payment"
                android:text="1"
                android:textSize="25sp" />

            <android.support.v4.widget.Space
                android:layout_width="3dp"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/bt_number_2"
                style="@style/btn_payment"
                android:text="2"
                android:textSize="25sp" />

            <android.support.v4.widget.Space
                android:layout_width="3dp"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/bt_number_3"
                style="@style/btn_payment"
                android:text="3"
                android:textSize="25sp" />

        </LinearLayout>

        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="3dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bt_number_4"
                style="@style/btn_payment"
                android:text="4"
                android:textSize="25sp" />

            <android.support.v4.widget.Space
                android:layout_width="3dp"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/bt_number_5"
                style="@style/btn_payment"
                android:text="5"
                android:textSize="25sp" />

            <android.support.v4.widget.Space
                android:layout_width="3dp"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/bt_number_6"
                style="@style/btn_payment"
                android:text="6"
                android:textSize="25sp" />

        </LinearLayout>

        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="3dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bt_number_7"
                style="@style/btn_payment"
                android:text="7"
                android:textSize="25sp" />

            <android.support.v4.widget.Space
                android:layout_width="3dp"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/bt_number_8"
                style="@style/btn_payment"
                android:text="8"
                android:textSize="25sp" />

            <android.support.v4.widget.Space
                android:layout_width="3dp"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/bt_number_9"
                style="@style/btn_payment"
                android:text="9"
                android:textSize="25sp" />

        </LinearLayout>

        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="3dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bt_number_clear"
                style="@style/btn_payment"
                android:background="@null"
                android:textSize="25sp" />

            <android.support.v4.widget.Space
                android:layout_width="3dp"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/bt_number_0"
                style="@style/btn_payment"
                android:text="0"
                android:textSize="25sp" />

            <android.support.v4.widget.Space
                android:layout_width="3dp"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/payment_keyboard_delete"
                style="@style/btn_payment"
                android:scaleType="centerInside"
                android:background="@null"
                android:src="@drawable/keyborad_delete" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>