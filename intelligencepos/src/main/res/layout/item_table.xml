<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_table_list_item"
    android:layout_width="102dp"
    android:layout_height="102dp"
    android:background="@drawable/shape_table_activity_item_table_bg">

    <LinearLayout
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_table_title"
            android:layout_width="match_parent"
            android:layout_height="34dp">

            <TextView
                android:id="@+id/tv_table_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:textColor="#ffffff"
                android:textSize="@dimen/tv_text_size_14"
                tools:text="大厅01"
                tools:textColor="#000000"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape_table_activity_item_table_other_info_bg">

            <TextView
                android:id="@+id/tv_table_status_or_consume"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="10dp"
                android:layout_toLeftOf="@+id/iv_table_calc"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="@dimen/tv_text_size_14"
                tools:text="空闲空闲空闲空闲空闲空闲空闲"/>

            <ImageView
                android:id="@+id/iv_table_calc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tv_table_status_or_consume"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/tv_table_status_or_consume"
                android:layout_marginRight="@dimen/layout_universal_spacing_8"
                android:src="@drawable/table_checked"/>

            <TextView
                android:id="@+id/tv_table_persons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/layout_universal_spacing_8"
                android:layout_marginLeft="@dimen/layout_universal_spacing_8"
                android:textSize="@dimen/tv_text_size_10"
                tools:text="2/5"/>

            <TextView
                android:id="@+id/tv_table_use_hours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="@dimen/layout_universal_spacing_8"
                android:layout_marginRight="@dimen/layout_universal_spacing_8"
                android:textSize="@dimen/tv_text_size_10"
                tools:text="0.5h"/>

        </RelativeLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_merge_identify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="6dp"
        android:layout_marginTop="6dp"
        android:src="@drawable/table_merge_identify"
        android:visibility="gone"
        tools:visibility="visible"/>

    <ImageView
        android:id="@+id/iv_order_identify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="6dp"
        android:layout_marginTop="6dp"
        android:src="@drawable/table_predict_mark"
        android:visibility="gone"
        tools:visibility="visible"/>

</RelativeLayout>
