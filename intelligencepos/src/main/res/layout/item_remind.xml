<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/layout_bg_white_ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_universal_spacing_56"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_circle_selected_or_not"
            android:layout_width="56dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:paddingLeft="@dimen/layout_universal_spacing_16"
            android:paddingRight="@dimen/layout_universal_spacing_16"
            android:scaleType="center"
            android:src="@drawable/circle_state_normal" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_gift"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="[赠]"
                    android:textColor="@color/tv_text_green_01b6ad"
                    android:textSize="@dimen/tv_text_size_19"
                    android:visibility="gone"
                    tools:visibility="visible" />


                <TextView
                    android:id="@+id/tv_dish_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:textColor="@color/tv_text_black_000000"
                    android:textSize="@dimen/tv_text_size_19"
                    tools:text="宫保鸡丁宫保鸡丁宫保鸡丁" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical|right"
            android:orientation="vertical"
            android:paddingLeft="@dimen/layout_universal_spacing_16"
            android:paddingRight="@dimen/layout_universal_spacing_16">

            <TextView
                android:id="@+id/tv_dish_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/tv_text_black_000000"
                android:textSize="@dimen/tv_text_size_19"
                tools:text="1" />

            <TextView
                android:id="@+id/tv_order_created_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_universal_spacing_3"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="#707070"
                android:textSize="@dimen/tv_text_size_13"
                tools:text="2016-12-15 16:07" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_practice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="56dp"
        android:layout_marginRight="16dp"
        android:lineSpacingExtra="3dp"
        android:layout_marginTop="-4dp"
        android:textColor="#707070"
        android:textSize="@dimen/tv_text_size_13"
        tools:text="做法1，做法2，做法3，做法4" />

    <include
        android:id="@+id/divider_dash_line"
        layout="@layout/include_dash_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/layout_universal_spacing_16"
        android:layout_marginRight="@dimen/layout_universal_spacing_16" />


</LinearLayout>