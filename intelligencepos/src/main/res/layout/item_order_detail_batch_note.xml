<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_item_bg_order_detail"
    android:orientation="vertical"
    android:paddingLeft="14.7dp"
    android:paddingRight="14.7dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="12dp"
                android:src="@drawable/user_protocol_unselected" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="56dp">

                    <ImageView
                        android:id="@+id/dishes_state"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="4dp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/dishesName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/dishes_state"
                        android:textColor="#000"
                        android:textSize="18.7sp"
                        tools:text="宫保鸡丁" />

                    <ImageView
                        android:id="@+id/no_print"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="8dp"
                        android:layout_toRightOf="@+id/dishesName"
                        android:src="@drawable/dishes_no_print"
                        android:visibility="gone" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="26.6dp"
                        android:gravity="center_vertical|right"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#000"
                            android:textSize="18.7sp" />

                        <TextView
                            android:id="@+id/price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="1.7dp"
                            android:textColor="#707070"
                            android:textSize="13.3sp"
                            tools:text="￥16.60" />
                    </LinearLayout>

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/dishesCookMethodPanel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="26.6dp"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/cuisineMethodInfo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="6dp"
                        android:layout_weight="1"
                        android:lineSpacingExtra="3dp"
                        android:textColor="#707070"
                        android:textSize="13.3sp"
                        tools:text="水煮，红烧" />

                    <TextView
                        android:id="@+id/cuisineMethodPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginLeft="12dp"
                        android:textColor="#707070"
                        android:textSize="13.3sp"
                        tools:text="$56.30" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/remark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:lineSpacingExtra="6dp"
                android:maxWidth="250dp"
                android:minHeight="21.3dp"
                android:textColor="#707070"
                android:visibility="visible"
                tools:text="多放垃圾，少放臭豆腐" />

        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/itemDivider"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_gravity="bottom"
        android:background="@drawable/bitmap_dash_line_image" />
</LinearLayout>