<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/layout_bg_white_ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_statistic"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_universal_spacing_37"
        android:clickable="false"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingLeft="16dp">

            <ImageView
                android:id="@+id/iv_statistic"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                tools:src="@drawable/dishes_hanged_up_title" />

            <TextView
                android:id="@+id/tv_statistic"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/layout_universal_spacing_12"
                android:textColor="@color/tv_text_orange_f4a902"
                android:textSize="@dimen/tv_text_size_15"
                tools:text="挂起中（5）" />

        </LinearLayout>

        <include layout="@layout/divider_horizontal" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingLeft="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tv_gift"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="[赠]"
                        android:textColor="@color/tv_text_green_01b6ad"
                        android:textSize="16sp"
                        android:visibility="gone"
                        tools:visibility="visible" />


                    <TextView
                        android:id="@+id/tv_dish_name"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:textColor="@color/tv_text_black_000000"
                        android:textSize="16sp"
                        tools:text="宫保鸡丁宫保鸡丁宫保鸡丁" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="40dp"
                android:gravity="center_vertical|end"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="点 "
                        android:textColor="#707070"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/tv_dish_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right|center_vertical"
                        android:textColor="@color/et_stroke_focused"
                        android:textSize="19sp"
                        tools:text="1.0" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="/退 "
                        android:textColor="@color/btn_text_gray_707070"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/tv_return_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right|center_vertical"
                        android:textColor="@color/btn_text_gray_707070"
                        android:textSize="19sp"
                        tools:text="1.0" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_order_created_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textColor="@color/btn_text_gray_707070"
                    android:textSize="13sp"
                    tools:text="2016-12-15 16:07" />
            </LinearLayout>

            <ImageView
                android:id="@+id/item_retreat_iv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp"
                android:layout_weight="2.5"
                android:scaleType="center"
                android:src="@drawable/more_black" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_practice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="-4dp"
            android:textColor="#707070"
            android:lineSpacingExtra="3dp"
            android:textSize="13sp"
            tools:text="做法1，做法2，做法3，做法4" />

        <include
            android:id="@+id/divider_dash_line"
            layout="@layout/include_dash_line"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp" />

        <include
            android:id="@+id/divider_solid_line"
            layout="@layout/divider_horizontal" />
    </LinearLayout>

</LinearLayout>


