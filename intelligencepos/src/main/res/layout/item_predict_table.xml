<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:id="@+id/divider_block"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_universal_spacing_5"
        android:background="@color/layout_bg_common_primary"/>

    <LinearLayout
        android:id="@+id/ll_predict_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_universal_spacing_37"
        android:background="@color/layout_bg_white_ffffff"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/layout_universal_spacing_16"
            android:src="@drawable/predict_table"/>

        <TextView
            android:id="@+id/tv_table_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/layout_universal_spacing_8"
            android:textColor="@color/btn_text_gray_8b8b8b"
            android:textSize="@dimen/tv_text_size_16"
            tools:text="大厅-大厅01"/>

        <TextView
            android:id="@+id/tv_table_self"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="（本桌）"
            android:textColor="@color/tv_text_blue_0078d7"
            android:textSize="@dimen/tv_text_size_16"/>

    </LinearLayout>

    <android.support.v4.widget.Space
        android:id="@+id/divider_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_universal_spacing_75"
        android:background="@color/layout_bg_white_ffffff"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="@dimen/layout_universal_spacing_16">

            <TextView
                android:id="@+id/tv_guest_name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:gravity="center_vertical"
                android:textColor="@color/tv_text_black_000000"
                android:textSize="@dimen/tv_text_size_19"
                tools:text="张女士"/>

            <TextView
                android:id="@+id/tv_guest_phone"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:gravity="top"
                android:textColor="@color/tv_text_gray_707070"
                android:textSize="@dimen/tv_text_size_15"
                tools:text="139****4567"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_predict_time"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:gravity="center_vertical|right"
                android:textColor="@color/tv_text_black_000000"
                android:textSize="@dimen/tv_text_size_19"
                tools:text="17:30"/>

            <TextView
                android:id="@+id/tv_guest_count"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:gravity="top|right"
                android:textColor="@color/tv_text_gray_707070"
                android:textSize="@dimen/tv_text_size_15"
                tools:text="4人"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_open_table"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/layout_universal_spacing_16"
            android:paddingRight="@dimen/layout_universal_spacing_16"
            android:src="@drawable/indicate_arrow_right_blue"/>

    </LinearLayout>

    <include
        android:id="@+id/divider_dash_line"
        layout="@layout/include_dash_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/layout_universal_spacing_16"
        android:layout_marginRight="@dimen/layout_universal_spacing_16"/>

</LinearLayout>