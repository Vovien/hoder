<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <include
        android:id="@+id/header_full_divider"
        layout="@layout/full_line"
        android:visibility="gone" />

    <include
        android:id="@+id/header_dash_divider"
        layout="@layout/include_dash_line"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="14.7dp"
        tools:visibility="visible">

        <View
            android:id="@+id/split"
            android:layout_width="3dp"
            android:layout_height="18dp"
            android:layout_centerVertical="true"
            android:background="#0078d7" />

        <TextView
            android:id="@+id/tableInfo"
            android:layout_width="wrap_content"
            android:layout_height="37.3dp"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:textColor="#8b8b8b"
            android:textSize="16.3dp"
            android:visibility="gone"
            tools:text="大厅"
            tools:visibility="visible" />

    </LinearLayout>

    <include
        android:id="@+id/divider"
        layout="@layout/full_line"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/include_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_universal_spacing_37"
        android:background="@color/layout_bg_white_ffffff"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_title_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:src="@drawable/dishes_hanged_up_title" />

            <TextView
                android:id="@+id/tv_title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:textColor="@color/btn_text_orange_f4a902"
                android:textSize="@dimen/tv_text_size_15"
                tools:text="挂起中(1)" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_dish_context"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="14.7dp"
        android:paddingRight="14.7dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_dish_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|left"
                android:text="宫保鸡丁"
                android:textColor="#000"
                android:minLines="1"
                android:textSize="18.7sp" />

            <TextView
                android:id="@+id/tv_dish_count"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|right"
                android:text="1"
                android:paddingRight="15dp"
                android:textColor="#000"
                android:textSize="18.7sp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|right">

                <android.support.v7.widget.SwitchCompat
                    android:id="@+id/dishes_away_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:clickable="false"
                    android:theme="@style/order_dishes_setting_switch" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/cookMethodInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:lineSpacingExtra="3dp"
            android:text="fdmsnaf   jkdsafkljdsafdsjaofjdsoiafnkdosn f dsafdsa"
            android:textColor="#000000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/packageDishesInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:lineSpacingExtra="3dp"
            android:text="fdmsnaf   jkdsafkljdsafdsjaofjdsoiafnkdosn f dsafdsa"
            android:textColor="#000000"
            android:textSize="14sp" />

    </LinearLayout>
</LinearLayout>

