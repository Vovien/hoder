<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/layout_bg_white_ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_popup_window_refresh"
        android:layout_width="147dp"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:src="@drawable/retreat_refresh"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:gravity="center_vertical"
            android:text="刷新"
            android:textColor="#000000"
            android:textSize="16sp"/>

    </LinearLayout>

    <include layout="@layout/include_dash_line"/>

    <LinearLayout
        android:id="@+id/ll_popup_window_retreat_all"
        android:layout_width="147dp"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:src="@drawable/popup_back_dishes"/>

        <TextView
            android:id="@+id/tv_retreat_all"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:gravity="center_vertical"
            android:text="全退"
            android:textColor="#000000"
            android:textSize="16sp"/>

    </LinearLayout>

</LinearLayout>
