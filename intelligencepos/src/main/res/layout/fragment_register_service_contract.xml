<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/common_interval"
            android:layout_marginRight="@dimen/common_interval"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="96dp"
                android:gravity="center"
                android:includeFontPadding="false"
                android:lineSpacingExtra="4dp"
                android:text="@string/user_service_contract_title"
                android:textColor="#2f2f2f"
                android:textSize="22.7sp"/>

            <TextView
                android:id="@+id/tv_service_contract"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#5a5a5a"
                android:textSize="14.7sp"
                tools:text="用户服务协议"/>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/ll_next_step"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_button_height_large"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_next_step"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="6dp"
            android:drawableRight="@drawable/indicate_arrow_right_blue"
            android:text="同意并继续"
            android:textColor="@color/tv_text_blue"
            android:textSize="16sp"/>

    </LinearLayout>

</LinearLayout>