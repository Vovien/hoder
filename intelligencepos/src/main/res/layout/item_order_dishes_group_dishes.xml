<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:orientation="vertical"
    android:paddingLeft="14.7dp"
    android:paddingRight="14.7dp">

    <View
        android:id="@+id/itemDivider"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@drawable/bitmap_dash_line_image" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="56dp">

            <TextView
                android:id="@+id/dishesName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="宫保鸡丁"
                android:textColor="#000"
                android:textSize="21.3sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical|right"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textColor="#000"
                    android:textSize="18.7sp" />

                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1.7dp"
                    android:textColor="#707070"
                    android:textSize="13.3sp"
                    tools:text="￥16.60" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/dishesCookMethodPanel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible">

            <TextView
                android:id="@+id/cuisineMethodInfo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_weight="1"
                android:lineSpacingExtra="3dp"
                android:textColor="#000"
                android:textSize="13.3sp"
                tools:text="水煮，红烧" />

            <TextView
                android:id="@+id/cuisineMethodPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginLeft="12dp"
                android:textColor="#707070"
                android:textSize="13.3sp"
                tools:text="$56.30" />

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/remark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:lineSpacingExtra="6dp"
        android:maxWidth="250dp"
        android:minHeight="21.3dp"
        android:textColor="#000"
        android:visibility="gone"
        tools:text="多放垃圾，少放臭豆腐" />

</LinearLayout>