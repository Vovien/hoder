<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:id="@+id/table_right_fragment_center_detailed_item_view_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_universal_spacing_5"
        android:visibility="gone"
        tools:visibility="visible" />

    <LinearLayout
        android:id="@+id/include_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_universal_spacing_37"
        android:background="@color/layout_bg_white_ffffff"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_title_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:src="@drawable/dishes_hanged_up_title" />

            <TextView
                android:id="@+id/tv_title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:textColor="@color/btn_text_orange_f4a902"
                android:textSize="@dimen/tv_text_size_15"
                tools:text="挂起中(1)" />

            <TextView
                android:id="@+id/tv_title_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:textColor="@color/tv_text_white_ffffff"
                android:textSize="@dimen/tv_text_size_15"
                tools:text="价格" />

        </LinearLayout>

        <include layout="@layout/divider_horizontal" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/layout_bg_white_ffffff"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/table_right_fragment_center_detailed_item_layout"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <TextView
                android:id="@+id/tv_return"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="[退]"
                android:textColor="#f77c7a"
                android:textSize="@dimen/tv_text_size_19" />

            <TextView
                android:id="@+id/tv_gift"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="[赠]"
                android:textColor="#01b6ad"
                android:textSize="@dimen/tv_text_size_19" />

            <TextView
                android:id="@+id/tv_dishes_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="回锅肉"
                android:textColor="#000"
                android:textSize="@dimen/tv_text_size_19" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical|right"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_dishes_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="×1.00"
                    android:textColor="#000000"
                    android:textSize="@dimen/tv_text_size_19" />

                <TextView
                    android:id="@+id/tv_dishes_total_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:textColor="#707070"
                    android:textSize="@dimen/tv_text_size_13"
                    tools:text="￥18.00" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_cook_method"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="-4dp"
            android:orientation="horizontal"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:visibility="gone"
            tools:visibility="visible">

            <TextView
                android:id="@+id/tv_cook_method"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:lineSpacingExtra="3dp"
                android:textColor="#3c3c3c"
                android:textSize="@dimen/tv_text_size_13"
                tools:text="红烧" />

            <TextView
                android:id="@+id/tv_cook_method_money_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:gravity="right"
                android:textColor="#707070"
                android:textSize="@dimen/tv_text_size_13"
                tools:text="￥25.00" />

        </LinearLayout>

        <include
            android:id="@+id/dashLine"
            layout="@layout/include_dash_line"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_retreat_reason"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_universal_spacing_37"
        android:background="@color/layout_bg_white_ffffff"
        android:gravity="center_vertical"
        android:paddingBottom="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="8dp"
        android:textColor="#3c3c3c"
        android:textSize="@dimen/tv_text_size_15"
        android:visibility="gone"
        tools:text="退因："
        tools:visibility="visible" />

</LinearLayout>
