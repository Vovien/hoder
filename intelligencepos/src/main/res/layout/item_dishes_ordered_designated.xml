<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/common_text_color_ffffff"
    android:orientation="vertical">

    <View
        android:id="@+id/table_right_fragment_center_detailed_item_view_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_universal_spacing_5"
        android:visibility="gone"
        tools:visibility="visible" />

    <LinearLayout
        android:id="@+id/include_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_universal_spacing_37"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_title_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:src="@drawable/dishes_status_wakeup" />

            <TextView
                android:id="@+id/tv_title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:textColor="@color/btn_text_red_f56766"
                android:textSize="@dimen/tv_text_size_15"
                tools:text="已叫起(1)" />

        </LinearLayout>

        <include layout="@layout/divider_horizontal" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/layout_bg_white_ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="59dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <LinearLayout
                android:id="@+id/table_right_fragment_center_detailed_item_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_gift"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="[赠]"
                    android:textColor="#01b6ad"
                    android:textSize="@dimen/tv_text_size_19" />

                <TextView
                    android:id="@+id/tv_dishes_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="回锅肉"
                    android:textColor="#000"
                    android:textSize="@dimen/tv_text_size_19" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical|right"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_dishes_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="×1.00"
                android:textColor="#000000"
                android:textSize="@dimen/tv_text_size_19" />

            <TextView
                android:id="@+id/tv_dishes_total_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:textColor="#707070"
                android:textSize="@dimen/tv_text_size_13"
                tools:text="￥18.00" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_more"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:src="@drawable/more_black" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_cook_method"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="-4dp"
        android:lineSpacingExtra="3dp"
        android:textColor="#3c3c3c"
        android:textSize="@dimen/tv_text_size_13"
        tools:text="红烧" />

    <include
        android:id="@+id/dashLine"
        layout="@layout/include_dash_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp" />
</LinearLayout>
