<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        style="@style/KeyBoardVertical">

        <Button
            android:id="@+id/btn_number_1"
            style="@style/KeyBoardHorizontal"
            android:text="1"/>

        <android.support.v4.widget.Space
            android:layout_width="1dp"
            android:layout_height="match_parent"/>

        <Button
            android:id="@+id/btn_number_2"
            style="@style/KeyBoardHorizontal"
            android:text="2"/>

        <android.support.v4.widget.Space
            android:layout_width="1dp"
            android:layout_height="match_parent"/>

        <Button
            android:id="@+id/btn_number_3"
            style="@style/KeyBoardHorizontal"
            android:text="3"/>

    </LinearLayout>

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <LinearLayout
        style="@style/KeyBoardVertical">

        <Button
            android:id="@+id/btn_number_4"
            style="@style/KeyBoardHorizontal"
            android:text="4"/>

        <android.support.v4.widget.Space
            android:layout_width="1dp"
            android:layout_height="match_parent"/>

        <Button
            android:id="@+id/btn_number_5"
            style="@style/KeyBoardHorizontal"
            android:text="5"/>

        <android.support.v4.widget.Space
            android:layout_width="1dp"
            android:layout_height="match_parent"/>

        <Button
            android:id="@+id/btn_number_6"
            style="@style/KeyBoardHorizontal"
            android:text="6"/>

    </LinearLayout>

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <LinearLayout
        style="@style/KeyBoardVertical">

        <Button
            android:id="@+id/btn_number_7"
            style="@style/KeyBoardHorizontal"
            android:text="7"/>

        <android.support.v4.widget.Space
            android:layout_width="1dp"
            android:layout_height="match_parent"/>

        <Button
            android:id="@+id/btn_number_8"
            style="@style/KeyBoardHorizontal"
            android:text="8"/>

        <android.support.v4.widget.Space
            android:layout_width="1dp"
            android:layout_height="match_parent"/>

        <Button
            android:id="@+id/btn_number_9"
            style="@style/KeyBoardHorizontal"
            android:text="9"/>

    </LinearLayout>

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <LinearLayout
        style="@style/KeyBoardVertical">

        <Button
            android:id="@+id/btn_number_dot"
            style="@style/KeyBoardHorizontal"
            android:text="."/>

        <android.support.v4.widget.Space
            android:layout_width="1dp"
            android:layout_height="match_parent"/>

        <Button
            android:id="@+id/btn_number_0"
            style="@style/KeyBoardHorizontal"
            android:text="0"/>

        <android.support.v4.widget.Space
            android:layout_width="1dp"
            android:layout_height="match_parent"/>

        <ImageView
            android:id="@+id/iv_delete"
            style="@style/KeyBoardHorizontal"
            android:scaleType="center"
            android:src="@drawable/keyborad_delete"/>

    </LinearLayout>

</LinearLayout>