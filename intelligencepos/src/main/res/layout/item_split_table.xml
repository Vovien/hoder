<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/layout_universal_spacing_48"
    android:background="@color/layout_bg_white_ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_circle_selected_or_not"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_universal_spacing_16"
            android:scaleType="center"
            android:src="@drawable/circle_state_normal"/>

        <TextView
            android:id="@+id/tv_table_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_universal_spacing_8"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/tv_text_black_000000"
            android:textSize="@dimen/tv_text_size_19"
            tools:text="大厅03"/>

        <TextView
            android:id="@+id/tv_consume_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/layout_universal_spacing_16"
            android:textColor="@color/tv_text_black_000000"
            android:textSize="@dimen/tv_text_size_16"
            tools:text="¥69.0"/>

    </LinearLayout>

    <include
        android:id="@+id/include_dash_line"
        layout="@layout/include_dash_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="11dp"/>

</RelativeLayout>