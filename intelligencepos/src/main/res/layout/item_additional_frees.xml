<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="74.7dp"
              android:gravity="center_vertical"
              android:orientation="horizontal"
              android:paddingLeft="@dimen/common_interval"
              android:paddingRight="@dimen/common_interval">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/additionalChargeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="18.7sp"
            tools:text="包间费"
            />

        <TextView
            android:id="@+id/additionalChargePrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="#000"
            android:textSize="13.3sp"
            tools:text="￥23.2"
            />
    </LinearLayout>

    <Button
        android:id="@+id/minus"
        android:layout_width="37.3dp"
        android:layout_height="37.3dp"
        android:background="@drawable/selector_button_minus"
        />

    <TextView
        android:id="@+id/count"
        android:layout_width="53.3dp"
        android:layout_height="37.3dp"
        android:layout_marginLeft="9.3dp"
        android:layout_marginRight="9.3dp"
        android:background="@drawable/shape_dish_operation_iv_ctrl_or_et_bg"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="18.7sp"
        tools:text="3"/>

    <Button
        android:id="@+id/add"
        android:layout_width="37.3dp"
        android:layout_height="37.3dp"
        android:background="@drawable/selector_button_add"
        />
</LinearLayout>