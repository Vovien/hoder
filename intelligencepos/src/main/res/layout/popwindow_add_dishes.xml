<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shadow_background"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/member_login_exit"
        android:layout_width="147dp"
        android:layout_height="45dp"
        android:background="@color/layout_bg_white_ffffff"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:src="@drawable/add_dish_member" />

        <TextView
            android:id="@+id/memberInfo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:gravity="center_vertical"
            android:text="会员登录"
            android:textColor="#000000"
            android:textSize="16sp" />

    </LinearLayout>

    <include layout="@layout/include_dash_line" />

    <LinearLayout
        android:id="@+id/refresh"
        android:layout_width="147dp"
        android:layout_height="45dp"
        android:background="@color/layout_bg_white_ffffff"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:src="@drawable/add_dishes_refresh" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:gravity="center_vertical"
            android:text="刷新"
            android:textColor="#000000"
            android:textSize="16sp" />

    </LinearLayout>


</LinearLayout>
