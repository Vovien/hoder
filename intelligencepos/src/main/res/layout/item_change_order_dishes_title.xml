<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:id="@+id/order_dishes_title_item_layout"
    android:background="@color/btn_text_white_ffffff"
    android:orientation="vertical">
    <!--<include-->
    <!--android:id="@+id/top_divider"-->
    <!--layout="@layout/divider_horizontal"/>-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="31dp"
        android:orientation="horizontal">
        <View
            android:layout_width="3dp"
            android:layout_height="16dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="8dp"
            android:background="@color/btn_text_blue_2495ee"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/btn_text_gray_555555"
            android:gravity="center_vertical"
            android:id="@+id/tv_order_dishes_title_name"
            android:textSize="16sp"
            tools:text="菜品类型"/>
    </LinearLayout>
    <include
        layout="@layout/divider_horizontal"/>
</LinearLayout>
