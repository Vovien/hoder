<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dfe3e6"
    android:orientation="vertical"
    tools:layout_height="168dp">

    <LinearLayout
        android:id="@+id/add_remark_top"
        android:layout_width="match_parent"
        android:layout_height="112dp"
        android:gravity="center">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/shape_edit_corner_bg_focused">

            <EditText
                android:id="@+id/add_remark_et"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/add_remark_delete"
                android:background="@null"
                android:hint="填写备注..."
                android:paddingLeft="10dp"
                android:textColor="#b2b2b2"
                android:textColorHint="#b2b2b2"
                android:textSize="18.7sp"
                android:singleLine="true" />

            <ImageView
                android:id="@+id/add_remark_delete"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:src="@drawable/edittext_delete"
                android:visibility="invisible" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/btn_negative"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_button_green"
            android:text="取消"
            android:textColor="#ffffff"
            android:textSize="22.7sp" />

        <Button
            android:id="@+id/btn_positive"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_button_blue"
            android:enabled="false"
            android:text="确定添加"
            android:textColor="#ffffff"
            android:textSize="22.7sp" />

    </LinearLayout>
</RelativeLayout>