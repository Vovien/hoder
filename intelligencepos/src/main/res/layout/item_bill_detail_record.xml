<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:gravity="center_vertical"
    android:layout_height="wrap_content"
    android:background="@color/common_text_color_f7f7f7"
    android:orientation="vertical">
        <View
            android:id="@+id/title_view"
            android:layout_width="match_parent"
            android:layout_height="5.3dp"
            android:background="@color/common_text_color_dfe3e6"/>
        <RelativeLayout
            android:id="@+id/bill_detail_recode_item_1_layout"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:background="@color/layout_bg_light_red">
                <TextView
                    android:id="@+id/bill_detail_recode_item_1_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/common_text_color_ffffff"
                    android:textSize="13.3sp"
                    tools:text="2017-06-03 16:20" />
                <TextView
                    android:id="@+id/bill_detail_recode_item_1_table_name"
                    android:layout_below="@+id/bill_detail_recode_item_1_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLength="15"
                    android:ellipsize="end"
                    android:textColor="@color/common_text_color_ffffff"
                    android:textSize="13.3sp"
                    android:layout_marginTop="4dp"
                    tools:text="大厅-A01"/>
                <TextView
                    android:id="@+id/bill_detail_recode_item_1_all_money"
                    android:layout_toRightOf="@+id/bill_detail_recode_item_1_time"
                    android:layout_alignBottom="@+id/bill_detail_recode_item_1_time"
                    android:layout_alignBaseline="@+id/bill_detail_recode_item_1_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="right"
                    android:textColor="@color/common_text_color_ffffff"
                    android:textSize="13.3sp"
                    tools:text="-￥60.0"/>
                <TextView
                    android:id="@+id/bill_detail_recode_item_1_operator"
                    android:layout_below="@+id/bill_detail_recode_item_1_all_money"
                    android:layout_alignRight="@+id/bill_detail_recode_item_1_all_money"
                    android:layout_alignBaseline="@+id/bill_detail_recode_item_1_table_name"
                    android:layout_alignBottom="@+id/bill_detail_recode_item_1_table_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLength="15"
                    android:ellipsize="end"
                    android:gravity="right"
                    android:textColor="@color/common_text_color_ffffff"
                    android:textSize="13.3sp"
                    tools:text="小妹"/>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/bill_detail_recode_item_2_layout"
            android:layout_width="match_parent"
            android:paddingLeft="16dp"
            android:layout_height="37.3dp">
                <TextView
                    android:id="@+id/bill_detail_recode_item_2_table_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:maxLength="15"
                    android:ellipsize="end"
                    android:textSize="14.7sp"
                    android:textColor="@color/common_text_color_8b8b8b"
                    tools:text="大厅-A01(3)"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/bill_detail_recode_item_3_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
                <RelativeLayout
                    android:id="@+id/bill_detail_recode_item_3_center_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="56dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp">
                        <TextView
                            android:id="@+id/bill_detail_recode_item_3_name"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:maxLength="15"
                            android:ellipsize="end"
                            android:textColor="@color/common_text_color_000000"
                            android:textSize="18.7sp"
                            tools:text="整单折扣"/>
                        <LinearLayout
                            android:id="@+id/bill_detail_recode_item_3_right_layout"
                            android:layout_toRightOf="@+id/bill_detail_recode_item_3_name"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="right"
                            android:orientation="vertical">
                                <TextView
                                    android:id="@+id/bill_detail_recode_item_3_number"
                                    android:layout_width="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical|right"
                                    android:layout_height="0dp"
                                    android:textSize="18.7sp"
                                    android:textColor="@color/common_text_color_000000"

                                    tools:text="X1" />
                                <TextView
                                    android:id="@+id/bill_detail_recode_item_3_price"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="13.3sp"
                                    android:textColor="@color/common_text_color_707070"
                                    android:layout_marginBottom="8dp"
                                    tools:text="￥20.2"/>
                        </LinearLayout>
                </RelativeLayout>
                <LinearLayout
                    android:id="@+id/bill_detail_recode_item_3_bottom_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingBottom="8dp">
                        <TextView
                            android:id="@+id/bill_detail_recode_item_3_bottom_surcharge"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/common_text_color_000000"
                            android:textSize="13.3sp"
                            tools:text="做法附加"/>
                        <TextView
                            android:id="@+id/bill_detail_recode_item_3_bottom_surcharge_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="13.3sp"
                            android:textColor="@color/common_text_color_707070"
                            tools:text="￥50.0"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/bill_detail_recode_item_3_reasons"
                    android:layout_width="match_parent"
                    android:layout_height="37.3dp"
                    android:gravity="center_vertical"
                    android:maxLength="30"
                    android:ellipsize="end"
                    android:textSize="14.7sp"
                    android:paddingRight="16dp"
                    android:paddingLeft="16dp"
                    android:textColor="@color/common_text_color_000000"
                    tools:text="退菜原因:上菜太慢，客人不要了！"/>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/bill_recode_recycler_item_4_layout"
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
                <TextView
                    android:id="@+id/bill_recode_recycler_item_4_table_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLength="15"
                    android:ellipsize="end"
                    android:textSize="18.7sp"
                    android:textColor="@color/common_text_color_000000"
                    tools:text="桌台名称"/>
                <TextView
                    android:id="@+id/bill_recode_recycler_item_4_serial_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/bill_recode_recycler_item_4_table_name"
                    android:layout_below="@+id/bill_recode_recycler_item_4_table_name"
                    android:maxLength="15"
                    android:ellipsize="end"
                    android:textColor="@color/common_text_color_707070"
                    android:textSize="13.3sp"
                    android:layout_marginTop="8dp"
                    tools:text="流水号：0215465"/>
                <TextView
                    android:id="@+id/bill_recode_recycler_item_4_end_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/bill_recode_recycler_item_4_table_name"
                    android:textColor="@color/common_text_color_707070"
                    android:textSize="13.3sp"
                    android:layout_marginTop="8dp"
                    android:layout_below="@+id/bill_recode_recycler_item_4_serial_number"
                    tools:text="结账或者作废时间"/>
                <TextView
                    android:id="@+id/bill_recode_recycler_item_4_money"
                    android:layout_toRightOf="@+id/bill_recode_recycler_item_4_table_name"
                    android:layout_alignBaseline="@+id/bill_recode_recycler_item_4_table_name"
                    android:layout_alignBottom="@+id/bill_recode_recycler_item_4_table_name"
                    android:layout_alignParentRight="true"
                    android:gravity="right"
                    android:textSize="18.7sp"
                    android:textColor="@color/common_text_color_000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="￥45.00"/>
                <TextView
                    android:id="@+id/bill_recode_recycler_item_4_bill_state"
                    android:layout_toRightOf="@+id/bill_recode_recycler_item_4_end_time"
                    android:layout_alignBaseline="@+id/bill_recode_recycler_item_4_end_time"
                    android:layout_alignBottom="@+id/bill_recode_recycler_item_4_end_time"
                    android:layout_alignParentRight="true"
                    android:gravity="right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLength="15"
                    android:ellipsize="end"
                    android:textColor="@color/common_text_color_707070"
                    android:textSize="13.3sp"
                    tools:text="账单状态"/>
        </RelativeLayout>
        <include
            android:visibility="gone"
            android:id="@+id/bill_point_information_divider_line"
            layout="@layout/divider_horizontal"/>
        <LinearLayout
            android:id="@+id/bill_point_information_dash_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="16dp"
            android:paddingLeft="16dp"
            android:orientation="horizontal">
                <include layout="@layout/include_dash_line"/>
        </LinearLayout>
</LinearLayout>
