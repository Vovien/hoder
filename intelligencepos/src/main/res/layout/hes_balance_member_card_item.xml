<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_card_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="98dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/layout_universal_spacing_8"
            android:layout_marginTop="@dimen/layout_universal_spacing_8"
            android:layout_weight="5"
            android:background="@drawable/shape_frame_weight_bg"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_card_image"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="24dp"
                android:src="@drawable/member_card" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/iv_card_image"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingLeft="@dimen/layout_universal_spacing_16">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/iv_card_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:textColor="@color/common_text_color_181818"
                        android:textSize="@dimen/tv_text_size_20"
                        tools:text="五折天卡五折天卡发" />

                    <ImageView
                        android:id="@+id/iv_share"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/layout_universal_spacing_8"
                        android:src="@drawable/do_not_share" />
                </LinearLayout>

                <TextView
                    android:id="@+id/iv_card_discount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/layout_universal_spacing_8"
                    android:textColor="@color/common_text_color_2495ee"
                    android:textSize="@dimen/tv_text_size_16"
                    tools:text="9.5折" />
                <TextView
                    android:id="@+id/iv_card_term_validity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/tv_text_gray_8b8b8b"
                    android:textSize="@dimen/tv_text_size_13"
                    tools:text="2018-01-01至2019-01-01" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center">
            <ImageView
                android:id="@+id/iv_card_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/check_normal" />
        </LinearLayout>
    </LinearLayout>
    <android.support.v4.widget.Space
        android:id="@+id/space"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_universal_spacing_8" />

</LinearLayout>
